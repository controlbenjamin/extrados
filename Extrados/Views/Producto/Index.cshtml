
@{
    ViewBag.Title = "Index";
}

<h2>Bienvenido!</h2>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Productos</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table style="width:90%;margin:auto">


                    <tr>
                        <td>CODIGO</td>
                        <td><input type="text" id="txtIdProducto" readonly class="limpiar" /><label id="lbltxtIdProducto"></label></td>
                    </tr>

                    <tr>
                        <td>NOMBRE</td>
                        <td><input type="text" id="txtNombre" class="limpiar obligatorio form-control" /><label id="lbltxtNombre"></label></td>

                    </tr>

                    <tr>
                        <td>MARCA</td>
                        <td><select id="cboMarca" class="limpiarCbo obligatorio form-control"></select><label id="lblcboIdRubro"></label></td>
                    </tr>


                    <tr>
                        <td>PRECIO ($)</td>
                        <td><input type="text" id="txtPrecio" class="limpiar obligatorio" /><label id="lbltxtPrecio"></label></td>

                    </tr>


                    <tr>
                        <td>ESTADO</td>
                        <td><input type="text" id="txtCategoria" class="limpiar obligatorio" /><label id="lbltxtCategoria"></label></td>
                    </tr>


                    <tr>
                        <td>IMAGEN</td>
                        <td> <img id="imgFoto" width="100" height="100" style="border:1px solid" /><label id="lblimgFoto"></label></td>
                    </tr>

                    <tr>
                        <td>IMAGEN</td>
                        <td><input id="btnFoto" type="file" value="..." /></td>

                    </tr>

                </table>


            </div>
            <div class="modal-footer">
                <button id="btnCancelar" type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                <button id="btnAceptar" onclick="agregarEditar()" type="button" class="btn btn-success">Aceptar</button>
            </div>
        </div>
    </div>
</div>
